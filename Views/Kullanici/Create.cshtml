@model Kullanici

@{
    ViewData["Title"] = "Kullanici Ekle";
}

<h2>Kullanıcı Ekle</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" method="post">
            <div class="form-group my-2">
                <label asp-for="Ad" class="control-label"></label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Soyad" class="control-label"></label>
                <input asp-for="Soyad" class="form-control" />
                <span asp-validation-for="Soyad" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Sifre" class="control-label"></label>
                <input asp-for="Sifre" class="form-control" type="password" />
                <span asp-validation-for="Sifre" class="text-danger"></span>
            </div>
             <div class="form-group my-2">
                <label asp-for="SifreTekrar" class="control-label"></label>
                <input asp-for="SifreTekrar" class="form-control" type="password" />
                <span asp-validation-for="SifreTekrar" class="text-danger"></span>
            </div>
                <div class="form-group my-2">
                <input type="submit" value="Ekle" class="btn btn-primary" />
                 <input type="reset" value="Temizle" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}